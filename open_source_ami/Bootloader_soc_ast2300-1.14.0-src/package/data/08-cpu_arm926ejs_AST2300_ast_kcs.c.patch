+	int			    KCSSendPktLen;
+	unsigned char	KCSRcvPkt [MAX_KCS_PKT_LEN];
+	unsigned char	KCSSendPkt [MAX_KCS_PKT_LEN];
+	unsigned char   KCSPhase;	
+	unsigned char   AbortPhase;
+	unsigned char   KCSError;
+	unsigned char   KCSRcvPktReady;
+
+} PACKED KCSBuf_T;
+#pragma pack ()
