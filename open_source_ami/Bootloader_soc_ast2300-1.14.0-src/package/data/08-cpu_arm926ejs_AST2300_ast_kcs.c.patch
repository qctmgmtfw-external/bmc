+int
+InitKCS (void)
+{
+//	unsigned char 	CorePresence;
+        unsigned char	Status;
+
+	KCSBuf_T		*pKCSBuf1;
+	KCSBuf_T		*pKCSBuf2;
+
+	pKCSBuf1 = &m_KCSBuf [KCS_1_CHANNEL];
+	pKCSBuf2 = &m_KCSBuf [KCS_2_CHANNEL];
+
+	pKCSBuf1->KCSRcvPktIx    = 0;
+	pKCSBuf2->KCSRcvPktIx    = 0;
+
+	pKCSBuf1->KCSSendPktIx   = 0;
+	pKCSBuf2->KCSSendPktIx   = 0;
+
+	pKCSBuf1->KCSSendPktLen  = 0;
+	pKCSBuf2->KCSSendPktLen  = 0;
+
+	pKCSBuf1->KCSPhase	    = KCS_PHASE_IDLE;
+	pKCSBuf2->KCSPhase	    = KCS_PHASE_IDLE;
+
+	pKCSBuf1->AbortPhase     = 0;
+	pKCSBuf2->AbortPhase     = 0;
+
+	pKCSBuf1->KCSError	    = 0;
+	pKCSBuf2->KCSError	    = 0;
+
+	pKCSBuf1->KCSRcvPktReady = 0;
+	pKCSBuf2->KCSRcvPktReady = 0;
+
+
+//	m_KCSPortNo				= SMS_KCS_BASE_ADDR;
+	lpc_base				= (unsigned char *) LPC_BASE_ADDR;
+
+	ENABLE_KCS_ADDRESS_SELECT  (KCS_1_CHANNEL);
+	SET_KCS_ADDRESS				(KCS_1_CHANNEL, m_kcs1baseaddr);
+	ENABLE_KCS_CHANNEL 			(KCS_1_CHANNEL);
+	DISABLE_KCS_INTRS(0);
+
+	ENABLE_KCS_ADDRESS_SELECT  (KCS_2_CHANNEL);
+	SET_KCS_ADDRESS				(KCS_2_CHANNEL, m_kcs2baseaddr);
+	ENABLE_KCS_CHANNEL 			(KCS_2_CHANNEL);
+	DISABLE_KCS_INTRS(1);
+
+	INIT_KCS_HARDWARE ();
+
+        READ_KCS_STATUS_REG (KCS_1_CHANNEL,Status);
+        Status = Status | KCS_ERROR_STATE;
+        WRITE_KCS_STATUS_REG (KCS_1_CHANNEL,Status);
+
+        READ_KCS_STATUS_REG (KCS_2_CHANNEL,Status);
+        Status = Status | KCS_ERROR_STATE;
+        WRITE_KCS_STATUS_REG (KCS_2_CHANNEL,Status);
+
+	return 0;
+}
